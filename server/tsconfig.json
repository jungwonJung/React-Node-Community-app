{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "noEmit": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true
  },
  "include": ["src"]
}
